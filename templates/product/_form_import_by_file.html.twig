{% extends 'forms/base_import.html.twig' %}

{% block form_title %}{{ 'product.import_title'|trans }}{% endblock %}

{% block form_body %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">{{ 'product.import_text'|trans }}</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-condensed">
                        <tr>
                            <td>{{ 'form.import_description'|trans }}</td>
                            <td>{{ form_widget(form.file) }}</td>
                        </tr>
                        <tr>
                            <td>{{ 'form.overwrite'|trans }}</td>
                            <td>{{ form_widget(form.overwrite) }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}